<div class="container">
  <div class="row">
    <h2 class="col-7 mx-auto">User info<br>
    <% if @user.errors.any? %>
      <%= @user.errors.count %> errors prohibited this obj from being saved:
      <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    <% end %>
    </h2>
  </div>
  <%= form_with model: @user do |f| %>
  <div class=" form-group col-7 mx-auto">
    <label for="inputName">Name</label>
    <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前", class: "form-control" %>
  </div>
  <div class="form-group col-7 mx-auto">
    <label for="inputImage">Image</label>
    <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*", class: "form-control-file" %>
  </div>
  <div class="form-group col-7 mx-auto">
    <label for="inputIntroduction">Introduction</label>
    <%= f.text_area :introduction, autofocus: true, id: "inputIntroduction", placeholder: "introduction", class: "form-control" %>
  </div>
  <div class="form-group col-7 mx-auto">
    <%= f.submit 'Update User', class: " btn btn-success" %>
  </div>
  <% end %>
</div>