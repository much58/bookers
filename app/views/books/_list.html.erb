  <div class="row">
    <% if book.errors.any? %>
      <%= book.errors.count %>errors prohibited this obj from being saved:
      <ul>
        <% book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    <% end %>
    <h2>User info</h2>
  </div>
  <div class="row">
    <%= image_tag user.get_profile_image(100,100) %>
  </div>
  <table class="table">
    <tr>
      <th>name</th>
      <th><%= user.name %></th>
    </tr>
    <tr>
      <th>introduction</th>
      <th><%= user.introduction %></th>
    </tr>
  </table>
  <% if user == current_user %>
    <%= link_to edit_user_path(current_user.id) do %>
      <div class="row btn btn-secondary btn-block">
        <i class="fas fa-user-cog text-light"></i>
      </div>
    <% end %>
  <% else %>
    <%= link_to edit_user_path(user.id) do %>
      <div class="row btn btn-secondary btn-block">
        <i class="fas fa-user-cog text-light"></i>
      </div>
    <% end %>
  <% end %>

  <div class="row mt-3">
    <h2>New book</h2>
  </div>
  <%= form_with model: book do |f| %>
    <div class="row">
      <p class="mb-1">Title</p>
    </div>
    <div class="row">
      <%= f.text_field :title %>
    </div>
    <div class="row">
      <p class="mb-1">Opinion</p>
    </div>
    <div class="row">
      <%= f.text_area :body %>
    </div>
    <div class="row">
      <%= f.submit 'Create Book', class: "btn btn-success mt-3" %>
    </div>
  <% end %>

