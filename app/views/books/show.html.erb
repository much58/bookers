<div class="container">
    <div class="row">
        <div class="col-3">
            <%= render 'list', user: @user, book: @book %>
        </div>
        <div class="col-9">
            <h2>Book detail</h2>
            <table class="table">
                <thead>
                    <tr>
                        <th class="col-2"></th>
                        <th>Title</th>
                        <th>Opinion</th>
                      </tr>
                </thead>
                <tbody>
                    <tr>
                      <td><%= image_tag @books.user.get_profile_image(100,100) %></td>
                      <td>
                          <%= link_to book_path(@books.id) do %>
                              <%= @books.title %>
                          <% end %>
                      </td>
                      <td><%= @books.body %></td>
                      <td>
                          <% if @books.user == current_user %>
                            <%= link_to 'edit', edit_book_path(@books), class: "btn btn-success" %>
                          <% end %>
                      </td>
                      <td>
                        <% if @books.user == current_user %>
                             <%= link_to 'destroy', book_path(@books), method: :delete, class: "btn btn-danger" %>
                        <% end %>
                      </td>
                    </tr>
                </tbody>
                <tfoot>
                    <tr>
                        <td>
                            <%= link_to user_path(@user.id) do %>
                                <%= @user.name %>
                            <% end %>
                        </td>
                        <td></td>
                        <td></td>
                    </tr>
                </tfoot>
            </table>
        </div>
    </div>
</div>
