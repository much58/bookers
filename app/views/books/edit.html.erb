<div class="container">
  <div class="row">
    <h2 class="col-7 mx-auto">Editing Book<br>
      <% if @book.errors.any? %>
        <%= @book.errors.count %>error prohibited this obj from being saved:
        <ul>
          <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>
    </h2>
  </div>
  <%= form_with model: @book do |f| %>
    <div class='form-group col-7 mx-auto'>
      <label for="inputTitle">Title</label>
      <%= f. text_field :title, autofocus: true, id:"inputTitle", placeholder:"title", class: "form-control" %>
    </div>
    <div class="form-group col-7 mx-auto">
      <label for="inputOpinion">Opinion</label>
      <%= f.text_area :body, autofocus: true, id: "inputOpinion", placeholder: "opinion", class: "form-control" %>
    </div>
    <div class="form-group col-7 mx-auto">
      <%= f.submit 'Update Book', class: " btn btn-success col-7 mx-auto mt-3" %>
    </div>
  <% end %>
  <div class="row">
    <div class="mx-auto col-7">
      <%= link_to 'Show', book_path(@book.id) %>|<%= link_to 'Back', books_path %>
    </div>

  </div>


</div>
