<div class="container">
  <div class="row">
    <h2 class="col-7 mx-auto">Editing Book<br>
      <% if @book.errors.any? %>
        <%= @book.errors.count %>error prohibited this obj from being saved:
        <ul>
          <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>
    </h2>
  </div>
  <%= form_with model: @book do |f| %>
    <div class='row'>
      <p class="col-7 mx-auto mb-1">Title</p>
    </div>
    <div class="row">
      <%= f. text_field :title, class: "col-7 mx-auto" %>
    </div>
    <div class="row">
      <p class="col-7 mx-auto mb-1">Opinion</p>
    </div>
    <div class="row">
      <%= f.text_area :body, class: "col-7 mx-auto" %>
    </div>
    <div class="row">
      <%= f.submit 'Update Book', class: " btn btn-success col-7 mx-auto mt-3" %>
    </div>
  <% end %>
  <div class="row">
    <div class="mx-auto col-7">
      <%= link_to 'Show', book_path(@book.id) %>|<%= link_to 'Back', books_path %>
    </div>

  </div>


</div>
