    <div class="container">
      <div class="row">
          <div class="col-3">
            <div class="row">
              <h2>User info</h2>
            </div>
            <div class="row">
              <%= image_tag @user.get_profile_image(100,100) %>
            </div>
            <table class="table">
              <tr>
                <th>name</th>
                <th><%= @user.name %></th>
              </tr>
              <tr>
                <th>introduction</th>
                <th><%= @user.introduction %></th>
              </tr>
            </table>

              <%= link_to edit_user_path(current_user.id) do %>
              <div class="row btn btn-secondary btn-block">
                <i class="fa-solid fa-user-pen text-light"></i>
              </div>
              <% end %>

          </div>
          <div class="col-9">
          </div>
      </div>
    </div>

<h1>Books</h1>
<div>
  <h2>New book</h2>
  <%= form_with model: @book do |f| %>
  <h4>Title</h4>
    <%= f.text_field :title %>
  <h4>Opinion</h4>
    <%= f.text_area :body %><br>
  <%= f.submit 'Create Book' %>
  <% end %>
</div>

<% @books.each do |book| %>
<div>
  <p>User image</p>
  <p>Title:<%= book.title %></p>
  <p>Opinion:<%= book.body %></p>
</div>
<% end %>





